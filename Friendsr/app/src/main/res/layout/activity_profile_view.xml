<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.youngdesigns.friendsr.ProfileViewActivity"
    android:orientation="vertical"
    android:background="#ffffffff">

    <RatingBar android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:numStars="5" android:stepSize="1" android:id="@+id/rb_1" android:layout_gravity="center">

    </RatingBar>

    <ImageView
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:src="@drawable/chandler"
        android:id="@+id/iv_1"
        android:layout_margin="10dp"
        android:cropToPadding="true" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/sv_1"
        >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_1"
            android:gravity="left"
            >






            </LinearLayout>



    </ScrollView>



</LinearLayout>
